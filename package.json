{
  "name": "@jepepa/like-button",
  "version": "0.8.2",
  "description": "Animated like button with liquid fill and particle effects",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vanilla": {
      "types": "./dist/vanilla.d.ts",
      "import": "./dist/vanilla.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && cat src/LikeButton/LikeButton.vanilla.css src/Particle/Particle.vanilla.css > dist/styles.css",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "prepublishOnly": "pnpm run ci && pnpm run typecheck && pnpm run test && pnpm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.4.1",
    "jsdom": "^26.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "keywords": [
    "react",
    "like-button",
    "animation",
    "particles",
    "liquid-fill",
    "brutalist",
    "tailwind"
  ],
  "author": "Jepepa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChickenVacuum/react-multi-like-button.git"
  },
  "homepage": "https://github.com/ChickenVacuum/react-multi-like-button#readme",
  "bugs": {
    "url": "https://github.com/ChickenVacuum/react-multi-like-button/issues"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
